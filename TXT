@echo off
REM This batch script creates a .txt file with specific data

REM Set the directory where the .txt file will be created
set "directory=C:\path\to\your\directory"

REM Set the filename of the .txt file
set "filename=myfile.txt"

REM Set the data that will be written to the .txt file
set "data=This is some specific data that will be written to the file."

REM Check if the directory exists and create it if it doesn't
if not exist "%directory%" mkdir "%directory%"

REM Write the data to the .txt file
echo %data% > "%directory%\%filename%"

REM Optional: Open the .txt file (uncomment the line below by removing "REM")
REM start "" "%directory%\%filename%"

echo File created successfully.
pause
